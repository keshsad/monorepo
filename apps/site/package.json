		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "catalog:",
		"typescript": "catalog:",
		"typescript-eslint": "^8.48.1",
		"vite": "catalog:",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "catalog:",
