		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "catalog:",
		"@types/better-sqlite3": "catalog:",
		"@types/node": "catalog:",
		"@vitest/browser-playwright": "^4.0.15",
		"drizzle-kit": "catalog:",
